.sideBar
  .sideTop
    .sideTop__nameBox
      .sideTop__nameBox__userName 
        = current_user.name
      %ul.sideTop__nameBox__menu
        %li.sideTop__nameBox__menu__edit
          =link_to new_group_path do
            = icon("fas", "edit")
        %li.sideTop__nameBox__menu__setting 
          = link_to edit_user_path(current_user.id) do
            = icon("fas","cog")
  .groupList
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__groupName
            = group.name
          .group__groupMessage
            = group.show_last_message