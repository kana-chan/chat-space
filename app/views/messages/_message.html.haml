.messageItem
  .messageInfo
    .messageInfo__userName
      = message.user.name
    .messageInfo__postDate
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message
    -if message.content.present?
      %p.message__content
        = message.content
    -if message.image.present?
      = image_tag message.image.url,class:"message__image"
